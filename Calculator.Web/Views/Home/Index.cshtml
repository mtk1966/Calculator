@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center">
    <h1 class="display-4">Hesap Makinesi</h1>
    <p>Lütfen yapmak istediğiniz işlem türünü seçin.</p>
</div>

<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="d-grid gap-3">
            <a asp-controller="Process" asp-action="Index" class="btn btn-lg btn-primary">Temel İşlemler (Toplama, Çıkarma, vb.)</a>
            <a asp-controller="SquareRootOperations" asp-action="Index" class="btn btn-lg btn-success">Karekök İşlemleri</a>
            <a asp-controller="OperationsWithExponents" asp-action="Index" class="btn btn-lg btn-info">Üslü Sayı İşlemleri</a>
            <a asp-controller="AreaAndPerimeterCalculation" asp-action="Index" class="btn btn-lg btn-warning">Alan ve Çevre Hesaplama</a>
            <div class="d-flex justify-content-center">
                <a asp-controller="Home" asp-action="AboutMe" class="disco-mega-link">Hakkımda</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 text-center">
        <h4>Toplam Yapılan İşlem Sayısı</h4>
        <p class="display-4">@ViewBag.TotalOperations</p>
    </div>
</div>
<hr />

@if (ViewBag.ShowModal == true)
{
    <!-- Bootstrap Modal -->
    <div class="modal fade" id="welcomeModal" tabindex="-1" aria-labelledby="welcomeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="welcomeModalLabel">Hoş Geldiniz!</h5>
                    <button type="button" class="btn-close d-none" id="modalCloseButtonHeader" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>
                        Merhaba uygulamamı beğendiysen lütfen düşüncelerini mehmettugkocaba4@gmail.com mail adresine yaz.
                    </p>
                    <p>
                        Hello, if you like my application, please write your thoughts to the e-mail address mehmettugkocaba4@gmail.com.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary d-none" id="modalCloseButtonFooter" data-bs-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('#welcomeModal').modal('show'); // Show modal immediately

                setTimeout(function () {
                    $('#modalCloseButtonHeader').removeClass('d-none'); // Show header close button
                    $('#modalCloseButtonFooter').removeClass('d-none'); // Show footer close button
                }, 3000); // 3 saniye (3000 milisaniye) sonra kapatma tuşlarını göster
            });
        </script>
    }
}