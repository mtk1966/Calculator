@model Calculator.Web.Models.ProcessViewModel
@{
    ViewData["Title"] = "Toplama";
}

<h1>Toplama</h1>

<form asp-action="Collection" method="post">
    <div class="form-group">
        <label asp-for="Number1">Sayı 1</label>
        <input asp-for="Number1" class="form-control" />
        <span asp-validation-for="Number1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Number2">Sayı 2</label>
        <input asp-for="Number2" class="form-control" />
        <span asp-validation-for="Number2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Number3">Sayı 3 (İsteğe bağlı)</label>
        <input asp-for="Number3" class="form-control" />
        <span asp-validation-for="Number3" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Topla</button>
</form>

@if (ViewBag.Result != null)
{
    <div class="mt-3">
        <h3>Sonuç: @ViewBag.Result</h3>
    </div>
}
