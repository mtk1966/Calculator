@model Calculator.Web.Models.SquareRootViewModel
@{
    ViewData["Title"] = "Karekök Sadeleştir";
}

<h1>Karekök Sadeleştir (a√b)</h1>

<form asp-action="Simplify" method="post">
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="A1">a</label>
                <input asp-for="A1" class="form-control" />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="B1">b</label>
                <input asp-for="B1" class="form-control" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Sadeleştir</button>
</form>

@if (Model != null && !string.IsNullOrEmpty(Model.Result))
{
    <div class="mt-3">
        <h3>Sonuç: @Model.Result</h3>
    </div>
}
